<Window x:Class="Anomaly_Detector.Views.CameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Anomaly_Detector.ViewModels"
        Title="Camera Feed" Height="450" Width="800">

    <Window.DataContext>
        <vm:CameraWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <!-- Camera feed image -->
        <Image Source="{Binding CameraFeedImage}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="640" Height="480" />

        <!-- Button to capture the image -->
        <Button Content="Capture Image" HorizontalAlignment="Left" VerticalAlignment="Bottom" Command="{Binding CaptureImageCommand}" Margin="10" Width="120"/>

        <!-- Button to delete the captured image -->
        <Button Content="Delete Image" HorizontalAlignment="Right" VerticalAlignment="Bottom" Command="{Binding DeleteImageCommand}" Margin="10" Width="120"/>
    </Grid>
</Window>
