<Window x:Class="Anomaly_Detector.Views.CameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camera" Height="500" Width="600">
    <Grid>
        <!-- Display camera feed -->
        <GroupBox Margin="10" Background="Gray" HorizontalAlignment="Center" VerticalAlignment="Top" Height="400" Width="400">

            <Image x:Name="CapturedImage" />

        </GroupBox>
        <!-- Buttons for Capture, Save, Delete -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Capture" Width="100" Margin="5" Click="CaptureButton_Click"/>
            <Button Content="Save" Width="100" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Delete" Width="100" Margin="5" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
